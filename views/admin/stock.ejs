<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Stock - XIONCO</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/admin/dashboard">XIONCO Admin</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/admin/dashboard">Dashboard</a>
          <a class="nav-link" href="/admin/produk">Produk</a>
          <a class="nav-link" href="/admin/pembelian">Pembelian</a>
          <a class="nav-link" href="/logout">Logout</a>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <h1>Manage Stock</h1>

      <button
        class="btn btn-success mb-3"
        data-bs-toggle="modal"
        data-bs-target="#addStockModal"
      >
        Add Stock
      </button>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Produk</th>
            <th>Jumlah</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="stockTable"></tbody>
      </table>
    </div>
    <div class="modal fade" id="addStockModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Stock</h5>
            <button class="btn-close" data-bs-dismiss="modal"></button>
          </div>

          <div class="modal-body">
            <form id="addStockForm">
              <div class="mb-3">
                <label class="form-label">Produk</label>
                <select class="form-control" id="addProdukId" required></select>
              </div>

              <div class="mb-3">
                <label class="form-label">Jumlah</label>
                <input
                  type="number"
                  class="form-control"
                  id="addJumlah"
                  required
                />
              </div>

              <button class="btn btn-primary" type="submit">Tambah</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/api.js"></script>

    <script>
      async function loadStock() {
        const table = document.getElementById("stockTable");

        try {
          const result = await api("/api/stock");
          const stockArray = result.data;

          table.innerHTML = stockArray
            .map(
              (s) => `
            <tr>
                <td>${s.id}</td>
                <td>${s.produk?.nama || "-"}</td>
                <td>${s.jumlah}</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="updateStock(${
                      s.id
                    }, ${s.jumlah})">
                      Update
                    </button>
                </td>
            </tr>`
            )
            .join("");
        } catch (err) {
          table.innerHTML = `<tr><td colspan="4" class="text-danger">${err.message}</td></tr>`;
        }
      }

      window.updateStock = async function (id, current) {
        const newJumlah = prompt("Jumlah baru:", current);
        if (!newJumlah) return;

        await api(`/api/stock/${id}`, {
          method: "PUT",
          body: JSON.stringify({ jumlah: Number(newJumlah) }),
        });

        loadStock();
      };

      async function loadProdukForStock() {
        const result = await api("/api/produk");
        const produk = result.data;

        document.getElementById("addProdukId").innerHTML = produk
          .map((p) => `<option value="${p.id}">${p.nama}</option>`)
          .join("");
      }

      document
        .getElementById("addStockForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const produkId = Number(document.getElementById("addProdukId").value);
          const jumlah = Number(document.getElementById("addJumlah").value);

          await api("/api/stock", {
            method: "POST",
            body: JSON.stringify({ produkId, jumlah }),
          });

          loadStock();

          bootstrap.Modal.getInstance(
            document.getElementById("addStockModal")
          ).hide();
        });

      loadProdukForStock();
      loadStock();
    </script>
  </body>
</html>

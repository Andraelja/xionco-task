<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Produk - XIONCO</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/admin/dashboard">XIONCO Admin</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/admin/dashboard">Dashboard</a>
          <a class="nav-link" href="/admin/stock">Stock</a>
          <a class="nav-link" href="/admin/pembelian">Pembelian</a>
          <a class="nav-link" href="/logout">Logout</a>
        </div>
      </div>
    </nav>
    <div class="container mt-4">
      <h1>Manage Produk</h1>
      <button
        class="btn btn-success mb-3"
        data-bs-toggle="modal"
        data-bs-target="#addProdukModal"
      >
        Add Produk
      </button>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Harga</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="produkTable"></tbody>
      </table>
    </div>

    <div class="modal fade" id="addProdukModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Produk</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <form id="addProdukForm">
              <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" class="form-control" id="nama" required />
              </div>
              <div class="mb-3">
                <label for="harga" class="form-label">Harga</label>
                <input type="number" class="form-control" id="harga" required />
              </div>
              <button type="submit" class="btn btn-primary">Add</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/api.js"></script>
    <script>
      async function loadProduk() {
        try {
          const result = await api("/api/produk");
          const produkArray = result.data;

          const table = document.getElementById("produkTable");
          table.innerHTML = produkArray
            .map(
              (p) => `
            <tr>
                <td>${p.id}</td>
                <td>${p.nama}</td>
                <td>${p.harga}</td>
                <td>
                    <button class="btn btn-warning btn-sm" onclick="editProduk(${p.id}, '${p.nama}', ${p.harga})">Edit</button>
                    <button class="btn btn-danger btn-sm" onclick="deleteProduk(${p.id})">Delete</button>
                </td>
            </tr>
        `
            )
            .join("");
        } catch (err) {
          alert(err.message);
        }
      }

      document
        .getElementById("addProdukForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          const nama = document.getElementById("nama").value.trim();
          const harga = Number(document.getElementById("harga").value);

          try {
            await api("/api/produk", {
              method: "POST",
              body: JSON.stringify({ nama, harga }),
            });

            loadProduk();
            bootstrap.Modal.getInstance(
              document.getElementById("addProdukModal")
            ).hide();
            e.target.reset();
          } catch (err) {
            alert(err.message);
          }
        });

      window.editProduk = async function (id, oldNama, oldHarga) {
        const nama = prompt("Nama baru:", oldNama);
        const harga = prompt("Harga baru:", oldHarga);
        if (!nama || !harga) return;

        await api(`/api/produk/${id}`, {
          method: "PUT",
          body: JSON.stringify({ nama, harga: Number(harga) }),
        });

        loadProduk();
      };

      window.deleteProduk = async function (id) {
        if (!confirm("Delete produk?")) return;

        await api(`/api/produk/${id}`, { method: "DELETE" });
        loadProduk();
      };

      loadProduk();
    </script>
  </body>
</html>
